  ],
  "scripts": {
    "start": "node index.js",
    "dev": "FIRESTORE_EMULATOR_HOST=localhost:8088 npm start",
    "build": "npm run build:graphql && npm run build:ts && npm run build:copy",
    "build:ts": "../../node_modules/.bin/tsc",
